<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.address.AddressActivity">

    <include layout="@layout/toolbar"></include>

    <TextView  android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintVertical_bias="0.093"
               android:text="ADDRESS"
               android:textStyle="bold"
               android:textSize="18sp"
               android:textColor="@android:color/black"
               android:id="@+id/tvAddress"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:padding="10dp"
               app:layout_constraintHorizontal_bias="0.06"
               android:background="@drawable/shape_rectangle"/>

    <EditText  android:layout_width="290dp"
               android:layout_height="50dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintHorizontal_bias="0.157"
               app:layout_constraintTop_toBottomOf="@+id/tvAddress"
               app:layout_constraintVertical_bias="0.015"
               android:id="@+id/edAddress"
               android:inputType="text"
               android:textColor="@android:color/black"
               android:textSize="15sp"
               android:background="@drawable/shape_rectangle"/>

    <TextView  android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginBottom="8dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/edAddress"
               app:layout_constraintVertical_bias="0.023"
               android:text="LANDMARK"
               android:textStyle="bold"
               android:textSize="18sp"
               android:textColor="@android:color/black"
               android:id="@+id/tvLandmark"
               android:padding="10dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.064"
               android:background="@drawable/shape_rectangle"/>

    <EditText  android:layout_width="350dp"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/tvLandmark"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.262"
               android:inputType="text"
               android:textSize="15sp"
               android:textColor="@android:color/black"
               android:id="@+id/etLandmark"
               android:background="@drawable/shape_rectangle"/>

    <TextView  android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/etLandmark"
               app:layout_constraintVertical_bias="0.045"
               android:text="CITY"
               android:textStyle="bold"
               android:textSize="18sp"
               android:textColor="@android:color/black"
               android:gravity="center"
               android:id="@+id/tvCity"
               android:padding="10dp"
               android:background="@drawable/shape_rectangle"
               android:layout_marginLeft="16dp"
               android:layout_marginStart="16dp"/>

    <EditText  android:layout_width="120dp"
               android:layout_height="50dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/tvCity"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintHorizontal_bias="0.054"
               app:layout_constraintVertical_bias="0.0"
               android:id="@+id/etCity"
               android:textSize="15sp"
               android:textColor="@android:color/black"
               android:background="@drawable/shape_rectangle"/>

    <TextView  android:layout_width="157dp"
               android:layout_height="48dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginBottom="432dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:text="STATE"
               android:textStyle="bold"
               android:textSize="18sp"
               android:textColor="@android:color/black"
               android:gravity="center"
               android:id="@+id/tvState"
               android:padding="15dp"
               android:background="@drawable/shape_rectangle"
               android:layout_marginEnd="16dp"
               android:layout_marginRight="16dp"/>

    <EditText  android:layout_width="120dp"
               android:layout_height="50dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/tvState"
               app:layout_constraintVertical_bias="0.0"
               android:id="@+id/etState"
               android:textSize="15sp"
               android:textColor="@android:color/black"
               android:background="@drawable/shape_rectangle"
               android:layout_marginEnd="28dp"
               android:layout_marginRight="28dp"/>

    <TextView  android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginBottom="328dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="284dp"
               android:layout_marginRight="284dp"
               android:text="ZIP CODE"
               android:textStyle="bold"
               android:textSize="18sp"
               android:textColor="@android:color/black"
               android:gravity="center"
               android:padding="15dp"
               android:id="@+id/tvZipCode"
               android:background="@drawable/shape_rectangle"/>

    <EditText  android:layout_width="120dp"
               android:layout_height="47dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginEnd="272dp"
               android:layout_marginRight="272dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_marginBottom="280dp"
               android:id="@+id/etZipCode"
               android:textSize="15sp"
               android:textColor="@android:color/black"
               android:background="@drawable/shape_rectangle"/>

    <TextView  android:layout_width="116dp"
               android:layout_height="56dp"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="264dp"
               android:layout_marginStart="264dp"
               app:layout_constraintTop_toBottomOf="@+id/etState"
               android:text="COUNTRY"
               android:textStyle="bold"
               android:textSize="18sp"
               android:textColor="@android:color/black"
               android:gravity="center"
               android:padding="15dp"
               android:id="@+id/tvCountry"
               android:background="@drawable/shape_rectangle"/>

    <EditText  android:id="@+id/etCountry"
               android:layout_width="120dp"
               android:layout_height="50dp"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               android:layout_marginLeft="8dp"
               android:layout_marginStart="8dp"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginRight="8dp"
               android:layout_marginTop="8dp"
               app:layout_constraintTop_toBottomOf="@+id/etState"
               app:layout_constraintHorizontal_bias="0.901"
               android:textSize="15sp"
               android:textColor="@android:color/black"
               app:layout_constraintVertical_bias="0.151"
               android:background="@drawable/shape_rectangle"/>

    <Button  android:id="@+id/btnSaveAddress"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="140dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:layout_marginEnd="8dp"
             android:layout_marginRight="8dp"
             app:layout_constraintStart_toStartOf="parent"
             android:layout_marginLeft="8dp"
             android:layout_marginStart="8dp"
             app:layout_constraintHorizontal_bias="0.0"
             android:text="SAVE ADDRESS"
             android:background="@android:color/holo_red_dark"
             android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>