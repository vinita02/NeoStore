<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="250dp" xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_img"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="100dp"
            android:background="@drawable/shape_circle" />

    <TextView   android:id="@+id/header_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_img"
                android:layout_marginLeft="35dp"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:text="Vinita Patil"
                android:textStyle="bold" />

    <TextView  android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/header_txt"
               android:layout_marginLeft="30dp"
               android:gravity="center"
               android:textSize="20dp"
               android:textColor="@color/white"
               android:textStyle="normal"
               android:text="patil.vinita@gmail.com" />

</RelativeLayout>