<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/holo_red_dark">


<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterActivity"
        android:orientation="vertical"
        android:layout_margin="16dp">




    <TextView
              android:text="@string/register"
              style="@style/textView_bg"
              android:padding="@dimen/std_padding"
              android:textColor="@android:color/white"/>

    <TextView
              android:text="@string/neostore"
              style="@style/textView_bg"
              android:textColor="@android:color/white"
              android:layout_marginTop="24dp"/>
    <EditText
            android:id="@+id/etFirstName"
            android:hint="@string/first_name"
            android:inputType="text"
            style="@style/edittText_bg"
            android:drawableLeft="@drawable/user_symbol"
    />

    <EditText
            android:id="@+id/etLastName"
            android:hint="@string/last_name"
            android:inputType="text"
            style="@style/edittText_bg"
            android:drawableLeft="@drawable/user_symbol"
    />

    <EditText
            android:id="@+id/etEmail"
            android:hint="@string/Email"
            android:inputType="textEmailAddress"
            style="@style/edittText_bg"
            android:drawableLeft="@drawable/email_symbol"
    />
    <EditText
            android:id="@+id/etPassword"
            android:hint="@string/password"
            android:inputType="textPassword"
            style="@style/edittText_bg"
            android:drawableLeft="@drawable/lock_symbol"
    />
    <EditText
            android:id="@+id/etConformPassword"
            android:hint="@string/confirm_password"
            android:inputType="textPassword"
            style="@style/edittText_bg"
            android:drawableLeft="@drawable/lock_symbol"
    />

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textColor="@color/white"
                style="@style/textView_bg"
                android:layout_gravity="center"
        />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/male"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/white"

        />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/female"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:buttonTint="@color/white"

                />

    </RadioGroup>

    <EditText
            android:id="@+id/etPhoneNo"
            android:hint="@string/phone_number"
            android:inputType="number"
            style="@style/edittText_bg"
            android:drawableLeft="@drawable/phone_android"
    />

    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="I agree the Terms and conditions"
            style="@style/textView_bg"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:buttonTint="@color/white"
    />

    <Button
            android:id="@+id/RegisterButton"
            style="@style/button_bg"
            android:text="REGISTER"
            android:background="@drawable/button_rounded"
    />
</LinearLayout>

</ScrollView>
