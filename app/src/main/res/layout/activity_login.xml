<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity"
        android:orientation="vertical"
        android:padding="30dp"
        android:background="#b71c1c">

        <TextView
        style="@style/login_text_bg"
          android:text="@string/neostore"
          android:gravity="center"
          android:textSize="@dimen/extra_large_font_size"
          android:textColor="@android:color/white"
          />



        <EditText
              android:id="@+id/etUsername"
              android:hint="@string/username"
              android:inputType="text"
              style="@style/edittText_bg"
              android:drawableLeft="@drawable/user_symbol"
             />



        <EditText
              android:id="@+id/etPassword"
              android:hint="@string/password"
              android:inputType="text"
              style="@style/edittText_bg"
              android:drawableLeft="@drawable/lock_symbol"
              />

       <Button
        android:id="@+id/etButton"
        style="@style/button_bg"
        android:text="LOGIN"
        android:background="@drawable/button_rounded"
       />

        <TextView
               style="@style/login_text_bg"
                android:text="Forgot Password?"
                android:gravity="center"
                android:textColor="@android:color/white"
                />

        <TextView
              style="@style/login_text_bg"
              android:text="DON'T HAVE AN ACCOUNT?"
              android:textColor="@android:color/white"
              android:drawableRight="@drawable/plus_button"
        />



</LinearLayout>