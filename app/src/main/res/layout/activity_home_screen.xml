<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".activity.home.HomeScreenActivity"
            android:orientation="vertical">

        <include layout="@layout/toolbar"></include>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
        >
            <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/viewPager">
            </androidx.viewpager.widget.ViewPager>

            <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:centered="true"
                    app:fillColor="#22211D"
                    app:pageColor="#E91C1A"
                    app:snap="false"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true">
            </com.viewpagerindicator.CirclePageIndicator>

        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:weightSum="2"
        >
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:orientation="horizontal"
                          android:gravity="center_horizontal"
                          android:layout_marginBottom="10dp"
                          android:layout_marginTop="10dp"
                          android:layout_weight="1"
            >
                <ImageView
                           android:id="@+id/ivTables"
                           android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:src="@drawable/tableicon"
                           android:scaleType="fitXY"
                           android:layout_marginRight="8dp"
                           android:layout_marginLeft="10dp"
                           android:layout_weight="1"
                />
                <ImageView
                        android:id="@+id/ivSofa"
                          android:layout_width="0dp"
                           android:layout_height="match_parent"
                           android:src="@drawable/sofaicon"
                           android:scaleType="fitXY"
                           android:layout_marginRight="10dp"
                           android:layout_weight="1"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:orientation="horizontal"
                          android:gravity="center_horizontal"
                          android:layout_weight="1"
            >
                <ImageView
                         android:id="@+id/ivChairs"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/chairsicon"
                        android:scaleType="fitXY"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                />
                <ImageView
                        android:id="@+id/ivCupbords"
                        android:layout_width="140dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/cupboardicon"
                        android:scaleType="fitXY"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
            android:id="@+id/navigationView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:menu="@menu/drawer_menu"
            android:theme="@style/style_itemtext"
            app:headerLayout="@layout/header_layout"
            android:background="#000000"
            app:itemTextColor="@color/white"
            app:itemIconTint="@color/white"/>

</androidx.drawerlayout.widget.DrawerLayout>